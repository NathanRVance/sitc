#!/bin/bash

#Obtain current directory
SITC_ROOT=$1

# Download and untar mopac7 to /usr/local
echo "Downloading mopac7..."
cd $ENGINE_DIR
sudo curl -s -O http://webmo.net/cloud/software/mopac7-bin.tar.gz
echo "Untarring mopac7 to $ENGINE_DIR..."
sudo tar xzf mopac7-bin.tar.gz
sudo chown -R root:root mopac7

echo "Enabling mopac7 in WebMO..."
# Enable mopac7 in WebMO
cd /home/$WEBMO_USER/public_html/cgi-bin/webmo/interfaces/
sudo mv mopac.int.disabled mopac.int
sed -i "s&mopacVersion=.*&mopacVersion=\"7\"&" mopac.int
sed -i "s&mopacPath=.*&mopacPath=\"$ENGINE_DIR/mopac7/mopac.exe\"&" mopac.int
sed -i "s&mopacExternal=.*&mopacExternal=\"\"&" mopac.int
