#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd /usr/local

echo "Unpacking gamess"
sudo tar xzf gamess-current.tar.gz

echo "Configuring installation"
cd gamess
GFORTVERS=`gfortran -v 2>&1 | tail -1 | awk '{print $3}' | cut -c1-3`
echo "
linux64



gfortran
$GFORTVERS

none


sockets
no
" | sudo ./config

echo "Compiling ddi"
cd ddi
sudo ./compddi
sudo mv ddikick.x ..
cd ..

echo "Compiling gamess"
sudo ./compall
sudo ./lked gamess 00

sudo patch rungms < $DIR/../../patches/rungms.patch
